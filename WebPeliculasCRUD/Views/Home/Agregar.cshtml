<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Scripts/bootstrap.js" rel="stylesheet" />
        <title>Agregar</title>
        <style>
            body {
                background-color: #212529;
                color: white;
            }
            header{
                margin-top: 30px;
            }
            input[type=text], input[type=datetime-local] {
                background-color: #87B4F8;
            }
        </style>
    </head>
    <body class="container">
        <header>
            <nav class="navbar" style="background-color: #702CF6; ">
                <div class="container-fluid">
                    <h2 class="navbar-brand" style="color: white;">Agregar Pelicula</h2>
                    <a class="btn btn-danger" href="/Home/Index">Cancelar</a>
                </div>
            </nav>
        </header>
        <main>
            <div id="messages">
                @TempData["error"]
                @TempData["success"]
            </div>
            <form action="/Home/Agregar" method="post">
                <div class="mb-3">
                    <label class="form-label">Nombre de la pelicula: </label>
                    <input class="form-control" type="text" name="Nombre" required min="2" /> @*el name debe ser igual al campo en constructor*@
                </div>
                <div class="mb-3">
                    <label class="form-label">Genero:</label>
                    <input class="form-control" type="text" name="Genero" required min="3" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Fecha de estreno: </label>
                    <input class="form-control" type="datetime-local" name="FechaEstreno" />
                </div>
                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
        </main>
    </body>
</html>
